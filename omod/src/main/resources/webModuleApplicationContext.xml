<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  		    http://www.springframework.org/schema/context
  		    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="org.openmrs.module.metrics.web"/>

    <bean id="metrics.MetricHandler"
          class="org.openmrs.module.metrics.util.MetricHandler">
        <property name="metricService" ref="metrics.MetricService"/>
        <property name="metricsSpringWebConfiguration" ref="metrics.MetricsSpringWebConfiguration"/>
    </bean>

    <bean id="metrics.MetricsSpringWebConfiguration"
          class="org.openmrs.module.metrics.util.MetricsSpringWebConfiguration">
    </bean>

    <bean id="metrics.DefaultMetricsServlet"
          class="org.openmrs.module.metrics.web.DefaultMetricsServlet">
        <property name="metricHandler" ref="metrics.MetricHandler"/>

    </bean>

</beans>
